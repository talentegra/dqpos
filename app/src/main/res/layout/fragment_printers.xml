<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dqserv.dqpos.Products$PlaceholderFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/printers_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/printers_rl_progress"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/box_background"
        android:gravity="center_horizontal"
        android:padding="@dimen/_10sdp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/printers_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/printers_progress"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="2"
            android:text="Get Latest Printers Configuration, Please Wait..."
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_margin" />

    </RelativeLayout>

</RelativeLayout>
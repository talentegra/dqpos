<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Printer Samples"
        android:textColor="#FFFFFF"
        android:textSize="30px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="PortName:"
        android:textSize="18px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_PortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text=" "
            android:textColor="#000000"
            android:textSize="30px" />

        <Button
            android:id="@+id/button_main_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Help_main"
            android:text="Help"
            android:textSize="30px" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button_PortDiscovery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="PortDiscovery"
                    android:text="Port Discovery"
                    android:layout_weight="1"
                    android:textSize="24px" />

                <Button
                    android:id="@+id/button_ClosePort"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="ClosePort"
                    android:text="Close Port"
                    android:layout_weight="1"
                    android:textSize="24px" />
            </LinearLayout>

            <Button
                android:id="@+id/button_GetStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="GetStatus"
                android:text="Get Status"
                android:textSize="24px" />

            <Button
                android:id="@+id/button_SampleReceipt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="SampleReceipt"
                android:text="Sample Receipt"
                android:textSize="24px" />



            <Button
                android:id="@+id/BtnPrint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Print"
                android:textSize="24px" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>